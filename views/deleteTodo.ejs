<%- include("partials/header") %>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9f9f9;
        padding: 40px;
        margin: 0;
    }

    .delete-container {
        max-width: 500px;
        margin: 0 auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h1 {
        color: #dc3545;
        margin-bottom: 20px;
        font-size: 28px;
    }

    p {
        font-size: 18px;
        margin-bottom: 30px;
        color: #333;
    }

    .button-group a {
        display: inline-block;
        margin: 0 10px;
        padding: 10px 20px;
        text-decoration: none;
        font-weight: bold;
        border-radius: 6px;
        transition: background-color 0.3s, color 0.3s;
    }

    .button-group .yes {
        background-color: #dc3545;
        color: #fff;
    }

    .button-group .yes:hover {
        background-color: #bd2130;
    }

    .button-group .no {
        background-color: #6c757d;
        color: #fff;
    }

    .button-group .no:hover {
        background-color: #5a6268;
    }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        text-decoration: none;
        color: #007bff;
    }

    .back-link:hover {
        text-decoration: underline;
    }

    @media (max-width: 600px) {
    body {
        padding: 20px;
    }

    .delete-container {
        padding: 20px;
        border-radius: 8px;
    }

    h1 {
        font-size: 24px;
    }

    p {
        font-size: 16px;
    }

    .button-group {
        display: flex;
        flex-direction: column;
        gap: 10px;
        align-items: center;
    }

    .button-group a {
        width: 100%;
        max-width: 300px;
        box-sizing: border-box;
        text-align: center;
        padding: 12px 20px;
    }
}
</style>

<div class="delete-container">
    <h1>Delete Task</h1>
    <p>Are you sure you want to delete this task?</p>
    <div class="button-group">
        <a class="yes" href="/confirm-delete/<%= id %>">Yes, Delete</a>
        <a class="no" href="/">Cancel</a>
    </div>
</div>

<%- include("partials/footer") %>
