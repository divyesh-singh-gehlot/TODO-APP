<%- include("partials/header") %>

<style>
    body {
        font-family: Arial, sans-serif;
        padding: 20px;
        background-color: #f5f5f5;
    }

    h1 {
        text-align: center;
        color: #333;
    }

    .add-task {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .add-task a {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 6px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #007BFF;
        color: white;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    .actions a {
        margin: 0 5px;
        color: white;
        padding: 6px 12px;
        text-decoration: none;
        border-radius: 4px;
    }

    .actions a:first-child {
        background-color: #FFC107; /* Update - yellow */
    }

    .actions a:last-child {
        background-color: #DC3545; /* Delete - red */
    }

    .no-data {
        text-align: center;
        color: #888;
        font-style: italic;
    }
</style>

<div>
    <h1>To-Do List</h1>
</div>

<div class="add-task">
    <a href="/add-task">+ Add Task</a>
</div>

<div>
    <table>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Action</th>
        </tr>

        <% if (tasks.length === 0) { %>
            <tr>
                <td colspan="5" class="no-data">No tasks found. Add a new one!</td>
            </tr>
        <% } else { %>
            <% for (let i = 0; i < tasks.length; i++) { %>
                <tr>
                    <td><%= tasks[i].title %></td>
                    <td><%= tasks[i].description %></td>
                    <td><%= moment(tasks[i].createdAt).format("DD/MMM/YYYY, HH:mm:ss") %></td>
                    <td><%= moment(tasks[i].updatedAt).format("DD/MMM/YYYY, HH:mm:ss") %></td>
                    <td class="actions">
                        <a href="/update-task?id=<%= tasks[i]._id %>">Update</a>
                        <a href="/delete-task?id=<%= tasks[i]._id %>">Delete</a>
                    </td>
                </tr>
            <% } %>
        <% } %>
    </table>
</div>

<%- include("partials/footer") %>
